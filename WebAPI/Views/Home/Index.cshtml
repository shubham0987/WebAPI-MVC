<div ng-controller="myCtrl">
    <div id="message" class="alert alert-info alert-dismissable" ng-hide="message.length == 0">{{message}}</div>
    <div class="row">
        <div class="col-md-8">
            <h2>List Questions</h2>
            <p>
                <table class="table table-striped table-bordered" ng-hide="questions.length==0">
                    <thead>
                        <th>ID</th>
                        <th>Question</th>
                        <th>Posted On</th>
                        <th>Actions</th>
                    </th>
                    <tbody>
                        <tr ng-repeat="question in questions" ng-include="getTemplate(question)">
                            <script type="text/ng-template" id="Display">
                                <td>{{question.quesID}}</td>
                                <td>{{question.question1}}</td>
                                <td>{{question.postedOn}}</td>
                                <td>
                                    <button ng-click="editQues(question)" class="btn btn-success" title="Edit"><i class="glyphicon glyphicon-edit"></i></button>
                                    <button ng-click="delQues(question.quesID)" class="btn btn-danger" title="Deleted"><i class="glyphicon glyphicon-remove"></i></button>
                                </td>
                            </script>
                            <script type="text/ng-template" id="Edit">
                                <td>{{selected.quesID}}</td>
                                <td>
                                    <div class="form-group">
                                        <textarea rows="3" class="form-control" ng-model="selected.question1" required></textarea>
                                    </div>
                                </td>
                                <td>{{selected.postedOn}}</td>
                                <td>
                                    <button ng-click="updateQues(question.quesID)" class="btn btn-success btn-sm" title="Save"><i class="glyphicon glyphicon-save"></i></button>
                                    <button ng-click="reset()" class="btn btn-danger btn-sm" title="Cancel"><i class="glyphicon glyphicon-remove"</button>
                                </td>
                            </script>
                        </tr>
                    </tbody>
                </table>
            </p>
        </div>
        <div class="col-md-4">
            <h2>Add Questions</h2>
            <textarea ng-model="ques" rows="3" class="form-control"> </textarea><br />
            <button ng-click="addQues()" class="btn btn-primary btn-lg">Add Question</button>
        </div>
    </div>
</div>